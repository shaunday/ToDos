<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- Set to "true" to use MockTaskService for development/testing -->
    <!-- Set to "false" to use TaskService with real database -->
    <add key="UseMockService" value="true" />
  </appSettings>
  
  <connectionStrings>
    <add name="TaskDbContext" 
         connectionString="Data Source=(localdb)\MSSQLLocalDB;Initial Catalog=ToDosDb;Integrated Security=True;" 
         providerName="System.Data.SqlClient" />
  </connectionStrings>
  
  <system.web>
    <compilation debug="true" targetFramework="4.8" />
    <httpRuntime targetFramework="4.8" />
  </system.web>
  
  <system.webServer>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
  </system.webServer>
</configuration> 