<Window x:Class="Todos.Client.Orchestrator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:Todos.Client.Orchestrator.Controls"
        xmlns:common="clr-namespace:Todos.Client.Common;assembly=Todos.Client.Common"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Padding="5"
        Title="Orchestrator" Height="800" Width="1600" 
        MinHeight="600" MinWidth="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ObjectDataProvider x:Key="ClientTypeValues"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="common:TypesGlobal+ClientType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline5TextBlock}">
            <Setter Property="Margin" Value="0,0,0,24" />
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
        </Style>
        <Style TargetType="GroupBox" BasedOn="{StaticResource MaterialDesignGroupBox}">
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="MinHeight" Value="80" />
        </Style>
        <!-- Centered TextBlock Style -->
        <Style x:Key="CenteredTextBlockStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <!-- Centered ComboBox Style -->
        <Style x:Key="CenteredComboBoxStyle" TargetType="ComboBox">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <!-- Centered ContentControl Style -->
        <Style x:Key="CenteredContentControlStyle" TargetType="ContentControl">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/> <!-- Sidebar for controls -->
            <ColumnDefinition Width="700"/> <!-- Client list, constant width -->
            <ColumnDefinition Width="*"/>   <!-- Log viewer, takes remaining space -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sidebar Controls -->
        <StackPanel Grid.Column="0" Margin="4,8,0,8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
            <materialDesign:Card Padding="8" Margin="0,0,0,8" materialDesign:ElevationAssist.Elevation="Dp1">
                <StackPanel>
                    <TextBlock Text="Orchestrator Launcher" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,20"/>
                    <!-- Professional Launch by file config checkbox -->
                    <DockPanel Margin="0,0,0,8">
                        <CheckBox Content=""
                                  IsChecked="{Binding LaunchByFileConfig, Mode=TwoWay}"
                                  Style="{StaticResource MaterialDesignCheckBox}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <TextBlock Text="Launch by file config"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="{DynamicResource MaterialDesignBody}"/>
                    </DockPanel>
                    <StackPanel x:Name="FileConfigPanel" Orientation="Horizontal" Margin="0,0,0,8" Visibility="{Binding LaunchByFileConfig, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="File path:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Text="{Binding FileConfigPath, Mode=TwoWay}" Width="140" Margin="0,0,0,0"/>
                    </StackPanel>
                    <TextBlock x:Name="FileConfigDesc" Text="{Binding FileConfigDescription}" TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0,0,0,12" Visibility="{Binding LaunchByFileConfig, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button x:Name="LaunchByFileConfigButton" Content="Launch by File Config" Style="{StaticResource MaterialDesignRaisedButton}" Command="{Binding LaunchClientsByFileConfigCommand}" HorizontalAlignment="Stretch" Margin="0,0,0,12" Visibility="{Binding LaunchByFileConfig, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <!-- Normal controls, hidden when LaunchByFileConfig is true -->
                    <Grid x:Name="ClientTypeGrid" Margin="0,0,0,8" Visibility="{Binding LaunchByFileConfig, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Client Type:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="ClientTypeComboBox" Grid.Column="1" SelectedItem="{Binding LaunchClientType, Mode=TwoWay}" ItemsSource="{Binding Source={StaticResource ClientTypeValues}}" SelectedIndex="0" Margin="8,0,0,0"/>
                    </Grid>
                    <Grid x:Name="ClientCountGrid" Margin="0,0,0,8" Visibility="{Binding LaunchByFileConfig, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Count:" VerticalAlignment="Center"/>
                        <TextBox x:Name="ClientCountTextBox" Grid.Column="1" Text="{Binding LaunchClientCount, Mode=TwoWay}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="8,0,0,0"/>
                    </Grid>
                    <Button x:Name="LaunchClientButton" Content="Launch Client(s)" Style="{StaticResource MaterialDesignRaisedButton}" Command="{Binding LaunchClientCommand}" HorizontalAlignment="Stretch" Margin="0,0,0,12" Visibility="{Binding LaunchByFileConfig, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card Padding="8" Margin="0,0,0,8" materialDesign:ElevationAssist.Elevation="Dp1">
                <StackPanel>
                    <TextBlock Text="Simulator Controls" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Simulator PID:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="SimulatorPidComboBox" Grid.Column="1" ItemsSource="{Binding SimulatorPids}" SelectedItem="{Binding SelectedSimulatorPid, Mode=TwoWay}" Margin="8,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Command:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="SimulatorCommandComboBox" Grid.Column="1" ItemsSource="{Binding SimulatorCommands}" SelectedItem="{Binding SelectedSimulatorCommand, Mode=TwoWay}" Margin="8,0,0,0"/>
                    </Grid>
                    <Button Content="Simulate" Style="{StaticResource MaterialDesignOutlinedButton}" Command="{Binding SimulateCommand}" HorizontalAlignment="Stretch" Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card Padding="8" materialDesign:ElevationAssist.Elevation="Dp1">
                <StackPanel>
                    <TextBlock Text="Filtering" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Client Type Filter -->
                        <TextBlock Text="Client Type:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
                        <ComboBox x:Name="ClientTypeCombo" Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Source={StaticResource ClientTypeValues}}" SelectedItem="{Binding FilterClientType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEditable="False" Margin="8,0,0,0"/>
                        <!-- IsAliveCheck centered in its own row -->
                        <DockPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12,0,12" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <CheckBox x:Name="IsAliveCheck"
                                      Content=""
                                      IsChecked="{Binding FilterIsAlive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="Alive Only"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                        </DockPanel>
                        <!-- PID Filter -->
                        <TextBlock Text="PID:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        <TextBox Text="{Binding FilterProcessIdText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" Margin="60,0,0,0"/>
                    </Grid>
                    <Button Content="Clear All Filters" Style="{StaticResource MaterialDesignOutlinedButton}" Command="{Binding ClearFiltersCommand}" HorizontalAlignment="Stretch" Margin="0,4,0,0"/>
                    <!-- Kill All Clients button, only visible if there are clients -->
                    <Button x:Name="KillAllClientsButton"
                            Content="Kill All Clients"
                            Command="{Binding KillAllClientsCommand}"
                            HorizontalAlignment="Stretch"
                            Margin="0,8,0,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TotalClientCount}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>

        <!-- Client List: remains large and central -->
        <controls:ClientListControl Grid.Column="1" Margin="4,8,4,8" />

        <!-- Log Viewer: now on the far right, takes remaining space, reduced margin -->
        <materialDesign:Card Grid.Column="2" Margin="4,8,4,8" Padding="8" materialDesign:ElevationAssist.Elevation="Dp2" VerticalAlignment="Stretch">
            <controls:LogViewerControl DataContext="{Binding LogViewerViewModel}" x:Name="LogViewer"/>
        </materialDesign:Card>
    </Grid>
</Window>
