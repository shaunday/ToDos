<UserControl x:Class="Todos.Client.Orchestrator.Controls.ClientFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Todos.Client.Orchestrator.Controls"
             xmlns:common="clr-namespace:Todos.Client.Common;assembly=Todos.Client.Common"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="500">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="ClientTypeValues"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="common:TypesGlobal+ClientType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid Margin="0,0,0,8" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" /> <!-- Wider left side -->
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Client Type:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold" Grid.Column="0" HorizontalAlignment="Right" />
            <ComboBox x:Name="ClientTypeCombo" Width="120" Margin="0,0,16,0"
                      ItemsSource="{Binding Source={StaticResource ClientTypeValues}}"
                      SelectedItem="{Binding ClientType, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      IsEditable="False" Grid.Column="1" HorizontalAlignment="Left" />
            <CheckBox x:Name="IsAliveCheck" Content="Alive Only" Margin="0,0,16,0"
                      IsChecked="{Binding IsAlive, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBlock Text="PID:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold" />
                <TextBox Width="160" Margin="0,0,0,0" VerticalContentAlignment="Center"
                         Text="{Binding FilterProcessIdText, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,0">
            <Button Content="Clear All Filters" Style="{StaticResource MaterialDesignOutlinedButton}" Width="160" Height="40"
                    Command="{Binding ClearFiltersCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </StackPanel>
    </StackPanel>
</UserControl> 