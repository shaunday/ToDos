<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Status Indicator DataTemplates -->
    <DataTemplate x:Key="EditingStatusTemplate">
        <Border Background="#E8F5E8" 
                BorderBrush="#4CAF50"
                BorderThickness="1"
                CornerRadius="3" 
                Padding="4,2" 
                Margin="1"
                Height="20"
                VerticalAlignment="Center">
            <TextBlock Text="Editing" 
                       FontSize="9" 
                       FontWeight="Normal" 
                       Foreground="#2E7D32"
                       VerticalAlignment="Center" />
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="LockedStatusTemplate">
        <Border Background="#FFEBEE" 
                BorderBrush="#F44336"
                BorderThickness="1"
                CornerRadius="3" 
                Padding="4,2" 
                Margin="1"
                Height="20"
                VerticalAlignment="Center">
            <TextBlock Text="Locked" 
                       FontSize="9" 
                       FontWeight="Normal" 
                       Foreground="#C62828"
                       VerticalAlignment="Center" />
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="CompletedStatusTemplate">
        <Border Background="#E3F2FD" 
                BorderBrush="#2196F3"
                BorderThickness="1"
                CornerRadius="3" 
                Padding="4,2" 
                Margin="1"
                Height="20"
                VerticalAlignment="Center">
            <TextBlock Text="Done" 
                       FontSize="9" 
                       FontWeight="Normal" 
                       Foreground="#1565C0"
                       VerticalAlignment="Center" />
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="EmptyStatusTemplate">
        <Border Background="Transparent" 
                Height="24"
                VerticalAlignment="Center" />
    </DataTemplate>

</ResourceDictionary> 