<UserControl x:Class="Todos.Ui.Sections.Tasks.TaskFilterControl"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="56" d:DesignWidth="900">
    <Border Padding="8" Background="{DynamicResource MaterialDesignPaper}" CornerRadius="6" BorderBrush="#EEE" BorderThickness="1">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Priority Filter -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Flag" Width="18" Height="18" Foreground="#888" Margin="0,0,4,0"/>
                <TextBlock Text="Priority" FontWeight="SemiBold" FontSize="12" Foreground="#888" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <ComboBox Width="100"
                          SelectedValue="{Binding Priority, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Content"
                          materialDesign:HintAssist.Hint="Priority">
                    <ComboBoxItem Content="All" />
                    <ComboBoxItem Content="High" />
                    <ComboBoxItem Content="Medium" />
                    <ComboBoxItem Content="Low" />
                </ComboBox>
            </StackPanel>

            <!-- Divider -->
            <Rectangle Grid.Column="1" Width="1" Height="28" Fill="#EEE" VerticalAlignment="Center"/>

            <!-- Tag Filter -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Tag" Width="18" Height="18" Foreground="#888" Margin="0,0,4,0"/>
                <TextBlock Text="Tag" FontWeight="SemiBold" FontSize="12" Foreground="#888" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBox Width="120"
                         Text="{Binding TagFilter, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Filter by tag"/>
            </StackPanel>

            <!-- Divider -->
            <Rectangle Grid.Column="3" Width="1" Height="28" Fill="#EEE" VerticalAlignment="Center"/>

            <!-- Completed Filter -->
            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="CheckCircleOutline" Width="18" Height="18" Foreground="#888" Margin="0,0,4,0"/>
                <TextBlock Text="Status" FontWeight="SemiBold" FontSize="12" Foreground="#888" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <ComboBox Width="110"
                          SelectedValue="{Binding CompletedStatus, ElementName=Root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Content"
                          materialDesign:HintAssist.Hint="Status">
                    <ComboBoxItem Content="All" />
                    <ComboBoxItem Content="Completed" />
                    <ComboBoxItem Content="Not Completed" />
                </ComboBox>
            </StackPanel>

            <!-- Spacer -->
            <StackPanel Grid.Column="5"/>

            <!-- Buttons -->
            <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button Style="{DynamicResource MaterialDesignOutlinedButton}" Content="Clear All Filters" Click="ClearAllFilters_Click" MinWidth="120" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl> 