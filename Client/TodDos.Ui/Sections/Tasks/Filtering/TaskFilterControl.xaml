<UserControl x:Class="Todos.Ui.Sections.Tasks.TaskFilterControl"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="52" d:DesignWidth="900">
    
    <Border Style="{StaticResource TaskControlCardStyle}" Padding="14,10">
        
        <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Priority Filter -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Flag" 
                                        Width="16" 
                                        Height="16" 
                                        Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                        Margin="0,0,5,0"
                                        ToolTip="Filter by priority"/>
                <ComboBox Width="100"
                          Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                          SelectedValue="{Binding Priority, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Content"
                          materialDesign:HintAssist.Hint="Priority"
                          FontSize="12"
                          MaxHeight="32"
                          Padding="8,4">
                    <ComboBoxItem Content="All" />
                    <ComboBoxItem Content="High" />
                    <ComboBoxItem Content="Medium" />
                    <ComboBoxItem Content="Low" />
                </ComboBox>
            </StackPanel>

            <!-- Divider -->
            <Rectangle Grid.Column="1" Width="1" Height="24" Fill="{DynamicResource MaterialDesignDivider}" VerticalAlignment="Center"/>

            <!-- Tag Filter -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Tag" 
                                        Width="16" 
                                        Height="16" 
                                        Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                        Margin="0,0,5,0"
                                        ToolTip="Filter by tag"/>
                <TextBox Width="120"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding TagFilter, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Tag filter"
                         FontSize="12"
                         MaxHeight="32"
                         Padding="8,4"/>
            </StackPanel>

            <!-- Divider -->
            <Rectangle Grid.Column="3" Width="1" Height="24" Fill="{DynamicResource MaterialDesignDivider}" VerticalAlignment="Center"/>

            <!-- Completed Filter -->
            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="CheckCircleOutline" 
                                        Width="16" 
                                        Height="16" 
                                        Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                        Margin="0,0,5,0"
                                        ToolTip="Filter by completion status"/>
                <ComboBox Width="110"
                          Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                          SelectedValue="{Binding CompletedStatus, ElementName=Root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Content"
                          materialDesign:HintAssist.Hint="Status"
                          FontSize="12"
                          MaxHeight="32"
                          Padding="8,4">
                    <ComboBoxItem Content="All" />
                    <ComboBoxItem Content="Completed" />
                    <ComboBoxItem Content="Not Completed" />
                </ComboBox>
            </StackPanel>

            <!-- Spacer -->
            <StackPanel Grid.Column="5"/>

            <!-- Clear Filters Button -->
            <Button Grid.Column="6" 
                    Style="{DynamicResource MaterialDesignIconButton}"
                    Click="ClearAllFilters_Click"
                    ToolTip="Clear all filters"
                    Width="32" 
                    Height="32"
                    Padding="0"
                    Margin="0,0,0,0">
                <materialDesign:PackIcon Kind="FilterRemove" 
                                        Width="18" 
                                        Height="18" 
                                        Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            </Button>
        </Grid>
    </Border>
</UserControl> 