<UserControl x:Class="Todos.Ui.Sections.Tasks.TaskOverviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="700">
    <Border Margin="0,0,0,8"
            Padding="10,4"
            Background="{DynamicResource MaterialDesignPaper}"
            CornerRadius="8"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock Text="Total:" Foreground="#888" FontWeight="SemiBold" Margin="0,0,4,0"/>
            <TextBlock Text="{Binding Total}" Foreground="#444" FontWeight="SemiBold" Margin="0,0,12,0"/>
            <TextBlock Text="|" Foreground="#DDD" FontWeight="Bold" Margin="0,0,12,0"/>
            <TextBlock Text="Locked:" Foreground="#888" FontWeight="SemiBold" Margin="0,0,4,0"/>
            <TextBlock Text="{Binding Locked}" Foreground="#666" FontWeight="SemiBold" Margin="0,0,12,0"/>
            <TextBlock Text="|" Foreground="#DDD" FontWeight="Bold" Margin="0,0,12,0"/>
            <TextBlock Text="High:" Foreground="#BCAAAA" FontWeight="SemiBold" Margin="0,0,4,0"/>
            <TextBlock Text="{Binding High}" Foreground="#BCAAAA" FontWeight="SemiBold" Margin="0,0,12,0"/>
            <TextBlock Text="|" Foreground="#DDD" FontWeight="Bold" Margin="0,0,12,0"/>
            <TextBlock Text="Medium:" Foreground="#BCA980" FontWeight="SemiBold" Margin="0,0,4,0"/>
            <TextBlock Text="{Binding Medium}" Foreground="#BCA980" FontWeight="SemiBold" Margin="0,0,12,0"/>
            <TextBlock Text="|" Foreground="#DDD" FontWeight="Bold" Margin="0,0,12,0"/>
            <TextBlock Text="Low:" Foreground="#AABCA7" FontWeight="SemiBold" Margin="0,0,4,0"/>
            <TextBlock Text="{Binding Low}" Foreground="#AABCA7" FontWeight="SemiBold"/>
        </StackPanel>
    </Border>
</UserControl> 