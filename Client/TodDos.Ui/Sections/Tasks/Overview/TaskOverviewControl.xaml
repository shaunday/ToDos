<UserControl x:Class="Todos.Ui.Sections.Tasks.TaskOverviewControl"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="900">
    <Border Style="{StaticResource TaskControlCardStyle}" Padding="12,8">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- All Tasks Stats (left) -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0">
                <TextBlock Text="All:" FontWeight="SemiBold" Foreground="#888" Margin="0,0,8,0"/>
                <TextBlock Text="Total:" FontWeight="SemiBold" Foreground="#888"/>
                <TextBlock Text="{Binding All.Total, ElementName=Root}" FontWeight="Bold" Margin="4,0,0,0"/>
                <TextBlock Text="Locked:" FontWeight="SemiBold" Foreground="#888" Margin="12,0,0,0"/>
                <TextBlock Text="{Binding All.Locked, ElementName=Root}" FontWeight="Bold" Margin="4,0,0,0"/>
                <TextBlock Text="High:" FontWeight="SemiBold" Foreground="#888" Margin="12,0,0,0"
                           Visibility="{Binding All.High, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
                <TextBlock Text="{Binding All.High, ElementName=Root}" FontWeight="Bold" Margin="4,0,0,0"
                           Visibility="{Binding All.High, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
                <TextBlock Text="Medium:" FontWeight="SemiBold" Foreground="#888" Margin="12,0,0,0"
                           Visibility="{Binding All.Medium, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
                <TextBlock Text="{Binding All.Medium, ElementName=Root}" FontWeight="Bold" Margin="4,0,0,0"
                           Visibility="{Binding All.Medium, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
                <TextBlock Text="Low:" FontWeight="SemiBold" Foreground="#888" Margin="12,0,0,0"
                           Visibility="{Binding All.Low, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
                <TextBlock Text="{Binding All.Low, ElementName=Root}" FontWeight="Bold" Margin="4,0,0,0"
                           Visibility="{Binding All.Low, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
            </StackPanel>
            <!-- Filtered Tasks Stats (right) -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1">
                <TextBlock Text="Filtered:" FontWeight="SemiBold" Foreground="#888" Margin="0,0,8,0"/>
                <TextBlock Text="Total:" FontWeight="SemiBold" Foreground="#888"/>
                <TextBlock Text="{Binding Filtered.Total, ElementName=Root}" FontWeight="Bold" Margin="4,0,0,0"/>
                <TextBlock Text="Locked:" FontWeight="SemiBold" Foreground="#888" Margin="12,0,0,0"/>
                <TextBlock Text="{Binding Filtered.Locked, ElementName=Root}" FontWeight="Bold" Margin="4,0,0,0"/>
                <TextBlock Text="High:" FontWeight="SemiBold" Foreground="#888" Margin="12,0,0,0"
                           Visibility="{Binding Filtered.High, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
                <TextBlock Text="{Binding Filtered.High, ElementName=Root}" FontWeight="Bold" Margin="4,0,0,0"
                           Visibility="{Binding Filtered.High, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
                <TextBlock Text="Medium:" FontWeight="SemiBold" Foreground="#888" Margin="12,0,0,0"
                           Visibility="{Binding Filtered.Medium, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
                <TextBlock Text="{Binding Filtered.Medium, ElementName=Root}" FontWeight="Bold" Margin="4,0,0,0"
                           Visibility="{Binding Filtered.Medium, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
                <TextBlock Text="Low:" FontWeight="SemiBold" Foreground="#888" Margin="12,0,0,0"
                           Visibility="{Binding Filtered.Low, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
                <TextBlock Text="{Binding Filtered.Low, ElementName=Root}" FontWeight="Bold" Margin="4,0,0,0"
                           Visibility="{Binding Filtered.Low, ElementName=Root, Converter={StaticResource IntToVisibilityConverter}}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl> 